<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".controllers.ControlarHorario">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerHorarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="32dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_arrow_tint="@color/colorPrimaryDark"
        app:ms_background_color="@color/common_google_signin_btn_text_dark_disabled"
        app:ms_text_color="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/botonguardar"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHorarios" />


</android.support.constraint.ConstraintLayout>