<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinfonaranaja"
    tools:context=".controllers.InformacionTarde">

    <Button
        android:id="@+id/btnTarde"
        android:layout_width="92dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="512dp"
        android:background="@drawable/botonnaranja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toEndOf="@+id/txtNombrePorgramaTarde"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVistaInfotarde"
        android:layout_width="191dp"
        android:layout_height="195dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camarablanca" />

    <TextView
        android:id="@+id/txtNombrePorgramaTarde"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:text="Video y Animacion 3D"
        android:textColor="@color/grisclaro"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgVistaInfotarde"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>